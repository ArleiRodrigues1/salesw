@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-dark">Editar Vendedores</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <!--<div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-group">
                <label asp-for="Seller.Nome" class="control-label"></label>
                <input asp-for="Seller.Nome" class="form-control" />
                <span asp-validation-for="Seller.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label"></label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.Aniversario" class="control-label"></label>
                <input asp-for="Seller.Aniversario" class="form-control" />
                <span asp-validation-for="Seller.Aniversario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.SalarioBase" class="control-label"></label>
                <input asp-for="Seller.SalarioBase" class="form-control" />
                <span asp-validation-for="Seller.SalarioBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Salvar" class="mt-2 btn btn-success" />|
                    <a asp-action="Index" class="mt-3" style="margin-top: 15px !important;">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}