@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h5 class="text-danger">Tem certeza que deseja deletar <br /> este vendedor?</h5>
<div>
    <hr class="text-dark" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aniversario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aniversario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalarioBase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalarioBase)
        </dd>
